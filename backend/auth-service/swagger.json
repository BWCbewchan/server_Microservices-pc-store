{
  "openapi": "3.0.0",
  "info": {
    "title": "PC Store Auth Service API",
    "description": "Authentication and user management API for PC Store. **Note:** When using the API Gateway, you may experience CORS issues with Swagger UI. For testing, prefer direct access or disable CORS in your browser.",
    "version": "1.0.0",
    "contact": {
      "name": "PC Store Support",
      "email": "support@pcstore.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:4006",
      "description": "Auth Service - direct access (recommended for Swagger UI testing)"
    },
    {
      "url": "/",
      "description": "Current host (works when accessed directly via auth service)"
    },
    {
      "url": "http://localhost:3000/api/auth",
      "description": "API Gateway (may have CORS issues in Swagger UI)"
    }
  ],
  "tags": [
    {
      "name": "authentication",
      "description": "Operations related to user authentication"
    },
    {
      "name": "users",
      "description": "Operations related to user management"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["authentication"],
        "summary": "Register a new user",
        "description": "Creates a new user account and returns a JWT token",
        "operationId": "registerUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegistration"
              },
              "example": {
                "name": "Trần Chí Bảo",
                "email": "baotran@example.com",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                },
                "example": {
                  "message": "Đăng ký thành công",
                  "user": {
                    "id": "60d21b4667d0d8992e610c85",
                    "name": "Trần Chí Bảo",
                    "email": "baotran@example.com",
                    "role": "user",
                    "avatar": "https://res.cloudinary.com/da5yv576h/image/upload/v1613356035/avatar/default_avatar_pzjqmj.png"
                  },
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                }
              }
            }
          },
          "400": {
            "description": "Bad request, email already in use",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Email đã được sử dụng"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Lỗi server",
                  "error": "Internal server error message"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["authentication"],
        "summary": "Login to user account",
        "description": "Authenticates a user and returns a JWT token",
        "operationId": "loginUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              },
              "example": {
                "email": "baotran@example.com",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                },
                "example": {
                  "message": "Đăng nhập thành công",
                  "user": {
                    "id": "60d21b4667d0d8992e610c85",
                    "name": "Trần Chí Bảo",
                    "email": "baotran@example.com",
                    "role": "user",
                    "avatar": "https://res.cloudinary.com/da5yv576h/image/upload/v1613356035/avatar/default_avatar_pzjqmj.png"
                  },
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                }
              }
            }
          },
          "401": {
            "description": "Authentication failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Email hoặc mật khẩu không chính xác"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/me": {
      "get": {
        "tags": ["users"],
        "summary": "Get current user information",
        "description": "Returns information about the currently authenticated user",
        "operationId": "getCurrentUser",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User information retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                },
                "example": {
                  "user": {
                    "id": "60d21b4667d0d8992e610c85",
                    "name": "Trần Chí Bảo",
                    "email": "baotran@example.com",
                    "role": "user",
                    "avatar": "https://res.cloudinary.com/da5yv576h/image/upload/v1613356035/avatar/default_avatar_pzjqmj.png",
                    "address": {
                      "street": "123 Nguyen Hue",
                      "city": "Ho Chi Minh",
                      "state": "HCM",
                      "zipCode": "70000",
                      "country": "Vietnam"
                    },
                    "phone": "0901234567",
                    "isVerified": false,
                    "createdAt": "2023-10-15T07:45:23.000Z"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized, token is missing or invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Bạn chưa đăng nhập. Vui lòng đăng nhập để truy cập."
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Không tìm thấy người dùng"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/update": {
      "put": {
        "tags": ["users"],
        "summary": "Update user information",
        "description": "Updates the current user's information",
        "operationId": "updateUser",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserUpdate"
              },
              "example": {
                "name": "Trần Chí Bảo Updated",
                "phone": "0901234567",
                "address": {
                  "street": "123 Nguyen Hue",
                  "city": "Ho Chi Minh",
                  "state": "HCM",
                  "zipCode": "70000",
                  "country": "Vietnam"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User information updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                },
                "example": {
                  "message": "Cập nhật thông tin thành công",
                  "user": {
                    "id": "60d21b4667d0d8992e610c85",
                    "name": "Trần Chí Bảo Updated",
                    "email": "baotran@example.com",
                    "role": "user",
                    "avatar": "https://res.cloudinary.com/da5yv576h/image/upload/v1613356035/avatar/default_avatar_pzjqmj.png",
                    "address": {
                      "street": "123 Nguyen Hue",
                      "city": "Ho Chi Minh",
                      "state": "HCM",
                      "zipCode": "70000",
                      "country": "Vietnam"
                    },
                    "phone": "0901234567",
                    "isVerified": false,
                    "createdAt": "2023-10-15T07:45:23.000Z"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized, token is missing or invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Không tìm thấy người dùng"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/ping": {
      "get": {
        "tags": ["system"],
        "summary": "Check service health",
        "description": "Simple ping endpoint to check if the service is running",
        "operationId": "pingService",
        "responses": {
          "200": {
            "description": "Service is running",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "service": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "pong",
                  "timestamp": "2023-10-15T08:30:45.123Z",
                  "service": "auth-service"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["system"],
        "summary": "Get service health details",
        "description": "Returns detailed information about the service health including database connection status",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Health check results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "service": {
                      "type": "string"
                    },
                    "database": {
                      "type": "object",
                      "properties": {
                        "state": {
                          "type": "string"
                        },
                        "readyState": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                },
                "example": {
                  "status": "OK",
                  "timestamp": "2023-10-15T08:30:45.123Z",
                  "service": "auth-service",
                  "database": {
                    "state": "connected",
                    "readyState": 1
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserRegistration": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "description": "User's full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "User's password (min 6 characters)"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "User's password"
          }
        }
      },
      "UserUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "User's full name"
          },
          "phone": {
            "type": "string",
            "description": "User's phone number"
          },
          "address": {
            "type": "object",
            "properties": {
              "street": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "zipCode": {
                "type": "string"
              },
              "country": {
                "type": "string"
              }
            }
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "User's unique identifier"
          },
          "name": {
            "type": "string",
            "description": "User's full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "role": {
            "type": "string",
            "enum": ["user", "admin"],
            "description": "User's role"
          },
          "avatar": {
            "type": "string",
            "description": "URL to user's avatar image"
          },
          "address": {
            "type": "object",
            "properties": {
              "street": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "zipCode": {
                "type": "string"
              },
              "country": {
                "type": "string"
              }
            }
          },
          "phone": {
            "type": "string"
          },
          "isVerified": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          },
          "token": {
            "type": "string",
            "description": "JWT token for authentication"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Error message"
          },
          "error": {
            "type": "string",
            "description": "Detailed error information (only in development)"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtained from login or register endpoints"
      }
    }
  }
}
